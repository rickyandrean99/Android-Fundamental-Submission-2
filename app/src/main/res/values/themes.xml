<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.A2320J2802_RickyAndrean_Submission1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/light_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/dark_orange</item>
        <item name="colorOnSecondary">@color/light_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextSplash">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Item">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="Item.Name">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item.Username">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Item.Location">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Detail">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Detail.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Detail.Medium">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Detail.Small">
        <item name="android:textSize">16sp</item>
    </style>
</resources>